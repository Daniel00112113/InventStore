# Configuración del Servidor
PORT=3000
NODE_ENV=development

# Seguridad - JWT
# IMPORTANTE: Genera un secreto fuerte y único para producción
# Puedes usar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CAMBIAR_ESTE_SECRETO_EN_PRODUCCION_usar_minimo_32_caracteres_aleatorios

# CORS - Dominios permitidos (separados por coma)
# En desarrollo: * (todos)
# En producción: https://tudominio.com,https://www.tudominio.com
ALLOWED_ORIGINS=*

# Base de Datos
DB_PATH=./database.db

# Backup automático
BACKUP_ENABLED=true
BACKUP_HOUR=2
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
