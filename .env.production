# InvenStore Production Environment Configuration
# Copy this file to .env and configure for your production environment

# Application
NODE_ENV=production
PORT=3000

# Security (REQUIRED - Generate secure values)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_64_CHARACTER_SECRET_KEY_FOR_PRODUCTION
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database
DATABASE_PATH=./database.db

# Clustering
CLUSTER_MODE=true
CLUSTER_WORKERS=auto

# Cache (Optional - Redis for better performance)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring
PROMETHEUS_ENABLED=true
LOG_LEVEL=info

# Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Rate Limiting
RATE_LIMIT_MAX=100

# Email Notifications (Optional)
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Slack Notifications (Optional)
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# AWS S3 Backups (Optional)
S3_BACKUP_ENABLED=false
S3_BACKUP_BUCKET=
S3_BACKUP_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=